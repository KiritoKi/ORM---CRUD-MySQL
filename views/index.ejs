<%- include("head.ejs"); %>

    <body>
        <h4>Teacher - Table</h4>
        <div class="table-responsive-sm">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th>Registration</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Birthday Date</th>
                        <th>ID_Teacher</th>
                        <th>Graduation</th>
                        <th>Salary</th>
                        <th class="d-print-none">
                            <a class="btn btn-sm btn-success" href="/insertTeacher">New Register</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <% for (const item of data_T) { %>
                        <tr>
                            <td>
                                <%= item.registration %>
