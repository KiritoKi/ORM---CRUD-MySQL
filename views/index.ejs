                            </th>
                            <th>
                                <%= item.graduation %>
                            </th>
                            <th>
                                <%= item.salary %>
                            </th>
                            <td class="d-print-none">

                                <a class="btn btn-sm btn-info"
                                    href="/insertD/teacher/<%= item.registration %>/<%= item.ID_teacher %>">Insert
                                    Detail</a>
                                <a class="btn btn-sm btn-warning"
                                    href="/edit/teacher/<%= item.registration %>/<%= item.ID_teacher %>">Edit</a>
                                <a class="btn btn-sm btn-danger"
                                    href="/delete/teacher/<%= item.registration %>/<%= item.ID_teacher %>">Delete</a>
