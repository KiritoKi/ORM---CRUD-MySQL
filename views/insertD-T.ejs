<%- include("head.ejs") -%>
    <div>
        <div class="card-header">

            <ul class="nav nav-pills w-100">
                <li class="nav-pill active">
                    <h5>Person Register</h5>
                </li>
            </ul>


            <div class="form-group">
                <label>Registration</label>
                <input type="text" class="form-control form-control-sm" name="registration"
                    value="<%= data.registration %>" readonly="readonly">
            </div>
            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control form-control-sm" name="name" value="<%= data.name %>"
                    readonly="readonly">
            </div>
            <div class="form-group">
                <label>Address</label>
                <input type="text" class="form-control form-control-sm" name="address" value="<%= data.address %>"
                    readonly="readonly">
            </div>
            <div class="form-group">
                <label>Birthday Date</label>
                <input type="text" class="form-control form-control-sm" name="birthdaydate"
                    value="<%= data.birthday_date %>" readonly="readonly">
            </div>
        </div>
    </div>
    <!-- Atualizar dados da tabela Professor -->
    <div class="card-header">
        <ul class="nav nav-pills w-100">
            <li class="nav-pill active">
                <h4>Insert On Table Teacher</h4>
            </li>
        </ul>
        <div>
            <!-- Form para inclusao de nova regisgro Detalhes para Mestre -->
            <div class="card-body">
                <!-- <form  action="/inserirDetalhe" method="post"> -->
                <form action="/insertD/teacher/<%= data.registration %>/<%= data.ID_teacher %>" method="post">
                    <table class="table table-striped table-hover table-active">
                        <tr>
                            <td colspan="2">Teacher Table Related to Person Table</td>
                        </tr>
                        <tr>
                            <td>Graduation</td>
                            <td><input class="form-control" type="text" name="graduation"
                                    value="<%= data.graduation %>" />
                            </td>
                        </tr>
                        <tr>
                            <td>Salary</td>
                            <td><input class="form-control" type="text" name="salary" value="<%= data.salary %>" /></td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <input class="btn btn-primary" type="submit" name="btIncuirPub" value="Insert" />
                                <a href="/" class="btn btn-outline-primary btn-sm">Return</a>
                            </td>
                        </tr>
                    </table>
                </form>
            </div>

            </body>

            </html>